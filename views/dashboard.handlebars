<section>
    <div class="row justify-content-center my-4">
         <h2 class="col-8">Create New Post</h2>
    </div>
  <form class='new-post-form row justify-content-center'>
    <div class="col-8">
        <div >
        <label for='post-title'>Title</label>
        <input type='text' name='post-title' id='post-title' class="form-control mb-3" />
        </div>
        <div>
            <textarea name="post-content" id="post-content" rows="10" class="form-control mb-3"></textarea>
        </div>
        <button type='submit' class='submit-btn btn btn-info text-white'>Create</button>
    </div>
  </form>
</section>

{{#if posts.length}}
<section class="row justify-content-center">
    <div class="col-8">
         <h2>Your Post</h2>
        <ol>
            {{#each posts as |post|}}
            <li class="box px-3 py-1">
                {{>post-info post}}
            </li>
             <a href="/dashboard/edit/{{post.id}}" class="edit-link btn btn-info text-white m-2 text-end mb-5">Edit Post</a>
            {{/each}}
        </ol>
    </div>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>